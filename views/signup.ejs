<!-- Includes Head Part -->
<%- include('./includes/head.ejs') %>
<link rel="stylesheet" href="/assets/css/main.css">
<link rel="stylesheet" href="/assets/css/forms.css">


<body>
    <div class="wrapper">
        
    <!-- Start Navigation -->  
    <%- include('./includes/nav.ejs') %>
    <!-- End Navigation -->
     
        <div class="auth-form auth-form_signup" >
            <form action="/signup" method="post">
                
                <% if(errmsg) { %>
                    <div class="msg msg-err">
                        <p> <%= errmsg %> </p>
                    </div>
                    <% } %>
                    <% if(SuccessMessage) { %>
                        <div class="msg msg-success">
                            <p> <%= SuccessMessage %> </p>
                        </div>
                        <% } %>
                        <h1>Sign Up</h1>
                    <input type="text" name="name" placeholder="Your Name." value="<% if (hasError) { %><%= oldInputs.name %><% } %>">
                    <input type="email" name="email" placeholder="Your Email." value="<% if (hasError) { %><%= oldInputs.email %><% } %>">
                    <input type="password" name="password" placeholder="Write Password." value="<% if (hasError) { %><%= oldInputs.password %><% } %>">
                    <input type="password" name="confirmPassword" placeholder="Rewrite Password." value="<% if (hasError) { %><%= oldInputs.confirmPassword %><% } %>">
                    <button class="btn main-btn" type="submit">Sign Up</button>
                    <p>You have account? <a href="/login">Login..</a>Have You Frogot Your Password <a href="/reset">Reset Password.</a></p>
                </form>
                <div class="socailAuth">
                    <a id="loginWithFB">Login With Facebook</a>
                    <a id="loginWithGoogle">Login With Google</a>
                </div>
        </div>

        
    </div>
    <%- include('./includes/copyRight.ejs') %>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"
    integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/lax.js" ></script>
  <script type="text/javascript" src="/slick/slick.min.js"></script>
  <script src="/assets/js/plugin.js"></script>

</body>

</html>