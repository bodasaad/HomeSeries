    <!-- Start Suffle Cards -->
    <%- include('./includes/shuffleCards.ejs') %>
    <!-- Start Suffle Cards -->
    </div>


    


    <!-- Start Footer -->
    <footer>

      <div id="contact">
        <div class="form-style">
          <p>Stay <span>Alert</span> For Latest Movies. <br> Sign Up </p>
          <form action="/signup" method="post">
            <input type="text" name="name" placeholder="Your Name.">
            <input type="email" name="email" placeholder="Your Email.">
            <input type="password" name="password" placeholder="Write Password.">
            <input type="password" name="passwordConf" placeholder="Rewrite Password.">
            <button class="btn main-btn" type="submit">Sign Up</button>
          </form>
        </div>
        <div class="photo">
          <img class="img-responsive" src="/assets/images/unchecked.png" alt="Icon" srcset="">
        </div>
      </div>

      <%- include('./includes/copyRight.ejs') %>
    </footer>
    <!-- End Footer -->


  </div>
